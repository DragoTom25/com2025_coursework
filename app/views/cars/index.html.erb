<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>Car plate</th>
      <th>Car brand</th>
      <th>Car model</th>
      <th>Colour</th>
      <th>Owners reg</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.car_plate %></td>
        <td><%= car.car_brand %></td>
        <td><%= car.car_model %></td>
        <td><%= car.colour %></td>
        <td><%= car.owners_reg %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

